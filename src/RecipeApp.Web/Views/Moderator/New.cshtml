@model RecipeApp.Core.Models.Moderator.NewModeratorModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Yeni Moderatör";
}

<form asp-controller="moderator" asp-action="new" method="POST" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-controller="moderator" asp-action="index" class="ml-2">Listeye Dön</a>
</form>