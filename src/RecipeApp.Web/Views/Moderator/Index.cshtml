@model System.Collections.Generic.IList<RecipeApp.Entity.Entities.User>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Moderatör Yönetimi";
}

<div class="row mb-4">
    <div class="col-12">
        <a class="btn btn-primary" asp-controller="moderator" asp-action="new">Yeni Ekle</a>
    </div>
</div>

@if (TempData["UserCreated"] != null)
{
    <div class="alert alert-success">@TempData["UserCreated"]</div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-warning">Henüz moderatör eklemediniz.</div>
}
else
{
    <table class="table table-bordered moderator-table">
        <thead>
            <tr class="bg-primary text-light">
                <th>Kullanıcı Adı</th>
                <th>E-Posta</th>
                <th class="options-column">Seçenekler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr data-row="@user.Id">
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td class="options-column">
                        <a class="btn btn-sm btn-danger delete-moderator" data-id="@user.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}