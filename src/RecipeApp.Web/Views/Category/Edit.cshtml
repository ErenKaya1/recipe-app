@model RecipeApp.Core.Models.Category.EditCategoryModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kategori Düzenle";
}

<form method="POST" class="edit-category-form" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ImageFile" class="form-label"></label>
        <input asp-for="ImageFile" class="form-control">
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageName))
    {
        <div class="row mb-2 img-preview-container d-block">
            <div class="col-12">
                <img class="img-preview" src="/image/category/@Model.ImageName">
            </div>
        </div>
    }
    else
    {
        <div class="row mb-2 img-preview-container d-none">
            <div class="col-12">
                <img class="img-preview">
            </div>
        </div>
    }

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-controller="category" asp-action="index" class="ml-2">Listeye Dön</a>
</form>